{{#if addNewAnswer}}

  <div class="container">
    <h1>Add Answer:</h1>
    <form>
      <div class="form-group">
        <label for="answer">Answer:</label>
        {{textarea value=answer id="answer" class="form-control"}}
        <br>
        <label for="author" default="">Author:</label>
        {{input value=author id="author" class="form-control"}}
      </div>

      <div>
        <button class="btn-sm btn-success" {{action 'addAnswer'    answer}}>Submit</button>
        <button class="btn-sm btn-danger" {{action 'forgetIt'}}>Forget It!</button>
      </div>
    </form>
  </div>
{{else}}
<hr>
<div class="centerit">
  <button class="btn-sm btn-primary"{{action 'answerFormShow'}}>Add an Answer</button>
</div>
{{/if}}
